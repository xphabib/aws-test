<div style="margin-left: 20px">
  <h3>Shutterstock photos</h3>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <%= form_with url: shutterstock_photos_path, method: :get, data: { turbolinks: false } do |form| %>
        <%= form.label :query, "Search for:" %>
        <%= form.text_field :query, value: params[:query], style: 'width: 400px' %>
        <%= form.submit "Search" %>
      <% end %>
    </div>

    <div class="col-md-6">
      <div class="col-md-8">
        <p>Total: <%= @res['total_count'] %>, Page: <%= @page %></p>
      </div>
      <div class="col-md-4">
        <div class="col-md-6">
          <%= link_to :previous, shutterstock_photos_path(query: params[:query], page: @page.to_i - 1, type: params[:type]), class: 'btn btn-primary', style: 'width: 100px' if @page.to_i > 1 %>
        </div>
        <div class="col-md-5">
          <%= link_to :next, shutterstock_photos_path(query: params[:query], page: @page.to_i + 1, type: params[:type]), class: 'btn btn-primary', style: 'width: 100px' %>
        </div>
      </div>
    </div>
  </div>

  <hr>
  <div class="row">
    <% @res['matches'].each do |data| %>
      <%= link_to shutterstock_photos_details_path(media: data['external_media_id'], search_id: @res['search_id'] ), target: '_blank' do %>
        <div class="col-md-3" style="margin-bottom: 20px">
          <div style="border: 5px white solid">
            <%= image_tag(data['thumbnail_url'], size: '415x220') %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <hr>

  <div class="col-md-6"></div>
  <div class="col-md-6">
    <div class="col-md-8">
      <p>Total: <%= @res['total_count'] %>, Page: <%= @page %></p>
    </div>
    <div class="col-md-4">
      <div class="col-md-6">
        <%= link_to :previous, shutterstock_photos_path(query: params[:query], page: @page.to_i - 1, type: params[:type]), class: 'btn btn-primary', style: 'width: 100px' %>
      </div>
      <div class="col-md-5">
        <%= link_to :next, shutterstock_photos_path(query: params[:query], page: @page.to_i + 1, type: params[:type]), class: 'btn btn-primary', style: 'width: 100px' %>
      </div>
    </div>
  </div>
</div>