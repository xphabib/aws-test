<h3>Useful Links</h3>
<br>
<div class="row">
  <%  @useful_links.each do |link| %>
    <%= link_to link.link, target: '_blank' do%>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail" style="height: 60px; padding: 10px">
          <p style="font-size: 12px">
            <%= link.title %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>